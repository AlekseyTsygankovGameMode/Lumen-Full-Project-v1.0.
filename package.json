{
  "name": "lumen-full-project",
  "version": "1.0.0",
  "description": "Lumen Conscious Interface Stack v1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "npx tsx watch server.ts",
    "dev:full": "concurrently \"vite\" \"npx tsx watch server.ts\"",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "vite build",
    "build": "npm run build:server && npm run build:client",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.31.0",
    "express": "^4.21.2",
    "postgres": "^3.4.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ts-node": "^10.9.2",
    "uuid": "^13.0.0",
    "vite": "^5.4.20"
  },
  "devDependencies": {
    "@types/node": "^20.19.22",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.16.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
